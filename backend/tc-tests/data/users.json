// Base case
{
	"firstName": "John",
	"lastName": "Doe",
	"avatar": "",
	"userGroup": "userGroups/0123456789012345678900"
}
// Fully-formed userGroup (not valid for this call)
{
	"firstName": "Jason",
	"lastName": "Doe",
	"avatar": "",
	"userGroup": {
		"name": "Jason's super-cool Usergroup",
		"permissions": {
			"perm1": true,
			"perm2": true,
			"perm3": true
		}
	}
}
// Missing fields
{
	"firstName": "Josh",
	"userGroup": "userGroups/0123456789012345678900"
}
// Additional field
{
	"firstName": "Joshua",
	"lastName": "Doe",
	"avatar": "",
	"userGroup": "userGroups/0123456789012345678900",
	"super-cool-hackerinos": "; DROP TABLE USERS"
}
// Valid key, but not a userGroup
{
	"firstName": "Joe",
	"lastName": "Doe",
	"avatar": "",
	"userGroup": "users/0123456789012345678900"
}
// Empty string key
{
	"firstName": "Jordan",
	"lastName": "Doe",
	"avatar": "",
	"userGroup": ""
}
// Passed ID
{
	"id": "id-insertion",
	"firstName": "John",
	"lastName": "Doe",
	"avatar": "",
	"userGroup": "userGroups/0123456789012345678900"
}
// Valid key, not an ID
{
	"firstName": "John",
	"lastName": "Doe",
	"avatar": "",
	"userGroup": "0123456789012345678900"
}
